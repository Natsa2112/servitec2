<section id="hero" class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <div class="container mx-auto px-4 relative z-10">
    <div class="flex flex-col md:flex-row items-center justify-between gap-12">
      <!-- Left Column: Text Content -->
      <div class="flex-1 text-center md:text-left">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">
          Expertos en <span class="text-[#4994d2]">Aire Acondicionado</span>
        </h1>
        <p class="text-lg md:text-xl text-gray-300 mb-8 max-w-2xl">
          Brindamos soluciones profesionales en instalación, mantenimiento y reparación de sistemas de aire acondicionado para hogares y empresas.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
          <a href="#contacto" 
             class="px-8 py-3 bg-[#4994d2] text-white rounded-lg font-semibold hover:bg-[#1B365D] transition-colors">
            Contactar Ahora
          </a>
          <a href="#servicios" 
             class="px-8 py-3 border-2 border-[#4994d2] text-[#4994d2] rounded-lg font-semibold hover:bg-white/10 transition-colors">
            Ver Servicios
          </a>
        </div>
      </div>

      <!-- Right Column: Image -->
      <div class="flex-1 relative">
        <div class="absolute inset-0 bg-gradient-to-r from-black/50 to-transparent rounded-lg z-10"></div>
        <img 
          src="/hero-image.webp" 
          alt="Técnico profesional de ServiTec instalando aire acondicionado" 
          class="w-full max-w-lg mx-auto rounded-lg shadow-2xl relative z-0"
          width="512"
          height="512"
        />
        <!-- Feature Badges -->
        <div class="absolute -bottom-4 -left-4 bg-black/70 backdrop-blur-sm p-4 rounded-lg shadow-lg border-l-4 border-[#4994d2] z-20">
          <p class="text-sm font-semibold text-white">✓ Servicio 24/7</p>
        </div>
        <div class="absolute -top-4 -right-4 bg-black/70 backdrop-blur-sm p-4 rounded-lg shadow-lg border-l-4 border-[#4994d2] z-20">
          <p class="text-sm font-semibold text-white">✓ Garantía Asegurada</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  section {
    min-height: calc(100vh - 80px);
  }
</style>
