<section id="productos" class="py-20">
    <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center text-white mb-16">
            Nuestros Productos
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Producto 1 -->
            <div class="product-card group">
                <div class="aspect-square bg-[#1B365D]/50 rounded-t-lg overflow-hidden">
                    <div class="w-full h-full flex items-center justify-center text-gray-400">
                        <span class="text-sm">Imagen del producto</span>
                    </div>
                </div>
                <div class="p-6 backdrop-blur-sm bg-black/30">
                    <h3 class="text-xl font-semibold text-[#4994d2] mb-2">Split Inverter</h3>
                    <p class="text-gray-300 mb-4">Sistema de alta eficiencia energética con tecnología inverter.</p>
                    <div class="flex justify-between items-center">
                        <span class="text-white font-semibold">Desde $XXX.XXX</span>
                        <button class="px-4 py-2 bg-[#4994d2] text-white rounded hover:bg-[#1B365D] transition-colors">
                            Ver más
                        </button>
                    </div>
                </div>
            </div>

            <!-- Producto 2 -->
            <div class="product-card group">
                <div class="aspect-square bg-[#1B365D]/50 rounded-t-lg overflow-hidden">
                    <div class="w-full h-full flex items-center justify-center text-gray-400">
                        <span class="text-sm">Imagen del producto</span>
                    </div>
                </div>
                <div class="p-6 backdrop-blur-sm bg-black/30">
                    <h3 class="text-xl font-semibold text-[#4994d2] mb-2">Multi Split</h3>
                    <p class="text-gray-300 mb-4">Sistema múltiple para climatizar varios ambientes.</p>
                    <div class="flex justify-between items-center">
                        <span class="text-white font-semibold">Desde $XXX.XXX</span>
                        <button class="px-4 py-2 bg-[#4994d2] text-white rounded hover:bg-[#1B365D] transition-colors">
                            Ver más
                        </button>
                    </div>
                </div>
            </div>

            <!-- Producto 3 -->
            <div class="product-card group">
                <div class="aspect-square bg-[#1B365D]/50 rounded-t-lg overflow-hidden">
                    <div class="w-full h-full flex items-center justify-center text-gray-400">
                        <span class="text-sm">Imagen del producto</span>
                    </div>
                </div>
                <div class="p-6 backdrop-blur-sm bg-black/30">
                    <h3 class="text-xl font-semibold text-[#4994d2] mb-2">Portátil</h3>
                    <p class="text-gray-300 mb-4">Solución móvil para climatización flexible y eficiente.</p>
                    <div class="flex justify-between items-center">
                        <span class="text-white font-semibold">Desde $XXX.XXX</span>
                        <button class="px-4 py-2 bg-[#4994d2] text-white rounded hover:bg-[#1B365D] transition-colors">
                            Ver más
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .product-card {
        border-radius: 0.5rem;
        overflow: hidden;
        transition: all 0.3s ease;
        border: 1px solid rgba(73, 148, 210, 0.1);
    }

    .product-card:hover {
        transform: translateY(-4px);
        border-color: rgba(73, 148, 210, 0.3);
    }
</style>
