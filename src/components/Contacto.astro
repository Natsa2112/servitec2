<section id="contacto" class="py-20">
    <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center text-white mb-16">
            Contáctanos
        </h2>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <!-- Formulario de Contacto -->
            <div class="contact-form-container">
                <form class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="nombre" class="block text-gray-300 mb-2">Nombre</label>
                            <input 
                                type="text" 
                                id="nombre" 
                                class="w-full px-4 py-2 rounded-lg bg-white/10 border border-[#4994d2]/30 text-white placeholder-gray-400 focus:outline-none focus:border-[#4994d2]"
                                placeholder="Tu nombre"
                            >
                        </div>
                        <div>
                            <label for="email" class="block text-gray-300 mb-2">Email</label>
                            <input 
                                type="email" 
                                id="email" 
                                class="w-full px-4 py-2 rounded-lg bg-white/10 border border-[#4994d2]/30 text-white placeholder-gray-400 focus:outline-none focus:border-[#4994d2]"
                                placeholder="tu@email.com"
                            >
                        </div>
                    </div>

                    <div>
                        <label for="telefono" class="block text-gray-300 mb-2">Teléfono</label>
                        <input 
                            type="tel" 
                            id="telefono" 
                            class="w-full px-4 py-2 rounded-lg bg-white/10 border border-[#4994d2]/30 text-white placeholder-gray-400 focus:outline-none focus:border-[#4994d2]"
                            placeholder="+56 9 11 xxxx-xxxx"
                        >
                    </div>

                    <div>
                        <label for="servicio" class="block text-gray-300 mb-2">Servicio de Interés</label>
                        <select 
                            id="servicio" 
                            class="w-full px-4 py-2 rounded-lg bg-white/10 border border-[#4994d2]/30 text-white focus:outline-none focus:border-[#4994d2]"
                        >
                            <option value="" class="bg-[#1B365D]">Selecciona un servicio</option>
                            <option value="instalacion" class="bg-[#1B365D]">Instalación</option>
                            <option value="mantenimiento" class="bg-[#1B365D]">Mantenimiento</option>
                            <option value="reparacion" class="bg-[#1B365D]">Reparación</option>
                        </select>
                    </div>

                    <div>
                        <label for="mensaje" class="block text-gray-300 mb-2">Mensaje</label>
                        <textarea 
                            id="mensaje" 
                            rows="4" 
                            class="w-full px-4 py-2 rounded-lg bg-white/10 border border-[#4994d2]/30 text-white placeholder-gray-400 focus:outline-none focus:border-[#4994d2]"
                            placeholder="¿En qué podemos ayudarte?"
                        ></textarea>
                    </div>

                    <button 
                        type="submit" 
                        class="w-full px-6 py-3 bg-[#4994d2] text-white rounded-lg hover:bg-[#1B365D] transition-colors font-semibold"
                    >
                        Enviar Mensaje
                    </button>
                </form>
            </div>

            <!-- Información de Contacto -->
            <div class="space-y-8">
                <div class="contact-info-card">
                    <div class="info-icon">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-xl font-semibold text-[#4994d2] mb-2">Ubicación</h3>
                        <p class="text-gray-300">Av. Principal 1234, Buenos Aires, Argentina</p>
                    </div>
                </div>

                <div class="contact-info-card">
                    <div class="info-icon">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-xl font-semibold text-[#4994d2] mb-2">Teléfono</h3>
                        <p class="text-gray-300">+54 9 11 xxxx-xxxx</p>
                    </div>
                </div>

                <div class="contact-info-card">
                    <div class="info-icon">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-xl font-semibold text-[#4994d2] mb-2">Email</h3>
                        <p class="text-gray-300">contacto@servitec.com.ar</p>
                    </div>
                </div>

                <div class="contact-info-card">
                    <div class="info-icon">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-xl font-semibold text-[#4994d2] mb-2">Horario de Atención</h3>
                        <p class="text-gray-300">Lunes a Viernes: 9:00 - 18:00</p>
                        <p class="text-gray-300">Sábado: 9:00 - 13:00</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .contact-form-container {
        padding: 2rem;
        border-radius: 1rem;
        background: rgba(27, 54, 93, 0.3);
        backdrop-filter: blur(8px);
        border: 1px solid rgba(73, 148, 210, 0.2);
    }

    .contact-info-card {
        display: flex;
        gap: 1rem;
        padding: 1.5rem;
        border-radius: 0.5rem;
        background: rgba(27, 54, 93, 0.3);
        backdrop-filter: blur(8px);
        border: 1px solid rgba(73, 148, 210, 0.2);
        transition: all 0.3s ease;
    }

    .contact-info-card:hover {
        transform: translateY(-2px);
        background: rgba(27, 54, 93, 0.4);
        border-color: rgba(73, 148, 210, 0.3);
    }

    .info-icon {
        padding: 0.75rem;
        border-radius: 0.5rem;
        background: rgba(73, 148, 210, 0.1);
        color: #4994d2;
    }
</style>
