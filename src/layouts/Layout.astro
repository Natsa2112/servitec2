---
import '../styles/base.css';
import Navigation from '../components/Navigation.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon-new.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen bg-[#0A1628] relative overflow-x-hidden">
		<!-- Gradientes circulares -->
		<div class="gradient-circles">
			<div class="circle circle-1"></div>
			<div class="circle circle-2"></div>
			<div class="circle circle-3"></div>
			<div class="circle circle-4"></div>
		</div>

		<!-- Overlay para asegurar legibilidad -->
		<div class="fixed inset-0 bg-[#0A1628]/80 backdrop-blur-sm z-0"></div>

		<!-- Navegación -->
		<Navigation />

		<!-- Contenido principal -->
		<div class="relative z-10 pt-20">
			<slot />
		</div>
	</body>
</html>

<style>
	.gradient-circles {
		position: fixed;
		inset: 0;
		z-index: 0;
		overflow: hidden;
	}

	.circle {
		position: absolute;
		border-radius: 50%;
		filter: blur(80px);
		opacity: 0.2;
		animation: pulse 8s infinite;
	}

	.circle-1 {
		width: 600px;
		height: 600px;
		background: radial-gradient(circle, #4994d2 0%, transparent 70%);
		top: -10%;
		left: -10%;
		animation-delay: 0s;
	}

	.circle-2 {
		width: 500px;
		height: 500px;
		background: radial-gradient(circle, #1B365D 0%, transparent 70%);
		top: 40%;
		right: -5%;
		animation-delay: -2s;
	}

	.circle-3 {
		width: 400px;
		height: 400px;
		background: radial-gradient(circle, #4994d2 0%, transparent 70%);
		bottom: -10%;
		left: 30%;
		animation-delay: -4s;
	}

	.circle-4 {
		width: 300px;
		height: 300px;
		background: radial-gradient(circle, #1B365D 0%, transparent 70%);
		top: 20%;
		left: 20%;
		animation-delay: -6s;
	}

	@keyframes pulse {
		0% {
			transform: scale(1) translate(0, 0);
		}
		33% {
			transform: scale(1.1) translate(20px, 20px);
		}
		66% {
			transform: scale(0.9) translate(-20px, -20px);
		}
		100% {
			transform: scale(1) translate(0, 0);
		}
	}

	html,
	body {
		margin: 0;
		width: 100%;
		min-height: 100vh;
	}

	/* Aseguramos que el gradiente cubra toda la página incluso al hacer scroll */
	body {
		background-attachment: fixed;
	}
</style>
